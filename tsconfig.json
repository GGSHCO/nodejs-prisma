{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@prisma/client/edge": ["./node_modules/@prisma/client/edge"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
