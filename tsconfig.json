{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@prisma/client/edge": ["./node_modules/@prisma/client/edge"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}